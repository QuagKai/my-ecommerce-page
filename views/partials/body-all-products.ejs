<div class="container">
  <h1>All Products</h1>
  <div class="form-group">
    <label for="price-range">Price Range: <span id="price-range-value">$200</span></label>
    <input type="range" class="form-range" id="price-range" min="0" max="5000" value="200" step="25">
  </div>
  <div class="form-group">
    <label for="sort-order">Sort Order:</label>
    <select class="form-control" id="sort-order">
      <option value="asc">Price Low to High</option>
      <option value="desc">Price High to Low</option>
    </select>
  </div>
  <hr>
  <div id="product-container" class="row">
    <!-- Add your product cards here -->
    <% products.forEach(function(product){ %>
      <div class="col-lg-4 col-md-6 col-sm-12 product-card" data-price="<%= product.price %>">
        <div class="card">
          <a href="/product/<%= product._id %>"><img src="/images/<%= product.image.data.toString('ascii') %>" class="card-img-top" alt="Product Image"></a>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">Created by: <%= product.creator %></p>
            <p class="card-price">Price: $<%= product.price %></p>
            <a href="/add-to-cart/<%= product._id %>" class="margin-button btn btn-primary">Add to Cart</a>
            <button class="btn btn-success">Buy Now</button>
          </div>
        </div>
      </div>
    <% }) %>
