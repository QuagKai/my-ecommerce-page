
<div class="container bg-body mt-5">
    <div class="row">
      <div class="col-md-6">
        <img src="/images/<%= oneProduct.image.data.toString('ascii') %>" alt="Product Image" class="rounded bigger-image">
      </div>
      <div class="col-md-6">
        <h2><%= oneProduct.name %></h2>
        <p><%= oneProduct.descrip %></p>
        <p>Size: <%= oneProduct.size %></p>
        <h4><%= oneProduct.price %> $</h4>
        <a href="/add-to-cart/<%= oneProduct._id %>" class="btn btn-primary">Add to Cart</a>
        <button class="btn btn-success">Buy Now</button>
      </div>
    </div>
  </div>